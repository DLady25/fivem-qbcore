## =========================
##  QBCore - server.cfg.example
## =========================

## --- NETWORK ---
endpoint_add_tcp "0.0.0.0:30120"
endpoint_add_udp "0.0.0.0:30120"
sv_maxclients 48
sv_enforceGameBuild 3095
sv_scriptHookAllowed 0
sv_endpointprivacy true
set onesync on
set resources_useSystemChat true
# sv_master1 ""          # descomente para NÃO publicar na lista pública

## --- PROJECT INFO ---
sv_licenseKey "PASTE_YOUR_KEY_HERE"
sv_hostname "[QBCore] Meu servidor exemplo"
sets sv_projectName "QBCore Example"
sets sv_projectDesc "Servidor base QBCore para estudo/desenvolvimento"
sets locale "pt-BR"
setr qb_locale "pt-br"
# load_server_icon myLogo.png  # habilite se o arquivo existir na pasta data

## --- DATABASE ---
# Ajuste usuário/senha/host no ambiente local
set mysql_connection_string "mysql://qbcore:CHANGE_ME@127.0.0.1/qbcore?charset=utf8mb4"

## --- VOICE (PMA) ---
setr voice_useNativeAudio true
setr voice_useSendingRangeOnly true
setr voice_defaultCycle "GRAVE"
setr voice_defaultVolume 0.3
setr voice_enableRadioAnim 1
setr voice_syncData 1

## =========================
##  RESOURCES (ordem importa)
## =========================

# FiveM base
ensure mapmanager
ensure chat
ensure spawnmanager
ensure sessionmanager
ensure basic-gamemode
ensure hardcap
ensure baseevents

# Standalone / dependências
ensure oxmysql              # precisa vir ANTES do qb-core
ensure pma-voice
ensure [standalone]

# QBCore
ensure qb-core
ensure qb-smallresources
ensure qb-weathersync
ensure qb-appearance
ensure qb-spawn
ensure qb-apartments
ensure qb-loading
ensure [qb]

# Mapas padrão (opcional)
ensure [voice]
ensure [defaultmaps]

## =========================
##  PERMISSIONS (exemplos)
## =========================
add_ace group.admin command allow
add_ace resource.qb-core command allow

# Ex.: liberar admin pelo license/discord (troque pelos seus)
# add_principal identifier.license:PASTE_LICENSE_HERE group.admin
# add_principal identifier.discord:PASTE_DISCORD_ID group.admin

# Grupos QBCore
add_ace qbcore.god command allow
add_principal qbcore.god group.admin
add_principal qbcore.god qbcore.admin
add_principal qbcore.admin qbcore.mod
